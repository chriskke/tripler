# Enable URL rewriting
RewriteEngine On

# Set the base for relative URLs
<IfModule mod_headers.c>
    # Add base href for pages with trailing slashes
    Header add "Link" "</> rel=canonical" "expr=%{REQUEST_URI} =~ m#^/.+/$#"
</IfModule>

# Redirect URLs with .php extension to URLs with trailing slash
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ /%1/ [R=301,L,NE]

# Redirect URLs without trailing slash to URLs with trailing slash (except for files and the root)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !/$
RewriteCond %{REQUEST_URI} !^/css/
RewriteCond %{REQUEST_URI} !^/js/
RewriteCond %{REQUEST_URI} !^/img/
RewriteCond %{REQUEST_URI} !^/images/
RewriteCond %{REQUEST_URI} !^/fonts/
RewriteCond %{REQUEST_URI} !^/revolution/
RewriteRule ^(.+)$ $1/ [R=301,L]

# Internally map URLs with trailing slash to the corresponding .php file
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)/$ $1.php [L]

# Don't apply trailing slash rule to actual files (CSS, JS, images, etc.)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule . - [L]

